@model Web.Models.ViewModels.Notifications.NotificationsIndexViewModel

@{
    ViewBag.Title = Localizer["PageTitle"];
}

<div class="row">
    <div class="col-lg-12">
        <div class="view-header">
            <div class="header-icon">
                <i class="fal fa-bell fa-sm"></i>
            </div>
            <div class="pull-right text-right">
                <a class="btn btn-lg btn-default" asp-action="ManageNotifications">@Localizer["ManageNotificationsButton"]</a>
            </div>
            <div class="header-title">
                <h3>@Localizer["HeaderTitle"]</h3>
                <small>@Localizer["HeaderDescription"]</small>
            </div>
        </div>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-body">
                @if (Model.Items.Any())
                {
                    foreach (var item in Model.Items)
                    {
                        <div class="panel panel-filled @(item.IsRead ? "panel-c-warning" : "panel-c-info")">
                            <div class="panel-body">
                                <div class="pull-right text-right">
                                    <a asp-action="Delete" asp-route-notificationId="@item.Id" asp-route-page="@Model.Page"><i class="far fa-trash"></i></a>
                                </div>
                                <div class="c-white">@Html.Raw(item.Body)</div>
                                <div><small>@(item.NotificationDate.ToFormattedString())</small></div>
                            </div>
                        </div>
                    }
                    <paginator asp-action="Index" model="@Model"/>
                }
                else
                {
                    <div>@Localizer["NoItemsMessage"]</div>
                }
            </div>
        </div>
    </div>
</div>