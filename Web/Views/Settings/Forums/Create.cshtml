@model CreateForumViewModel

@{
    ViewBag.Title = "Create Forum";
    var settings = new LayoutSettings
    {
        NavbarType = NavbarType.Admin,
        IsFooterVisible = false
    };
    ViewBag.Settings = settings;
}

<div class="row">
    <div class="col-lg-12">
        <div class="view-header">
            <div class="header-icon">
                <i class="fal fa-comments fa-sm"></i>
            </div>
            <div class="header-title">
                <h3>Forums</h3>
                <small>
                    Create new forum
                </small>
            </div>
        </div>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-body">
                <form method="post">
                    <div class="form-group">
                        <label>Forum Title</label>
                        <input type="" asp-for="Title" class="form-control" placeholder="Title">
                        <span class="help-block small">
                            <div>Forum title (3-64 chars)</div>
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </span>
                    </div>
                    <button type="submit" class="btn btn-accent">
                        Create Forum
                    </button>
                    <a class="btn btn-default" asp-action="Forums">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>