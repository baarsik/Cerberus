@using Web.Controllers
@using reCAPTCHA.AspNetCore.Templates
@model LoginViewModel
@{
    ViewBag.Title = Localizer["PageTitle"];
    ViewBag.Settings = new LayoutSettings
    {
        IsContainerCentered = true,
        IsFooterVisible = false
    };
}

<div class="view-header">
    <div class="header-icon">
        <i class="fal fa-lock-alt" data-fa-transform="shrink-4"></i>
    </div>
    <div class="header-title">
        <h3>@Localizer["Header_Title"]</h3>
        <small>@Localizer["Header_Description"]</small>
    </div>
</div>

<div class="panel panel-filled">
    <div class="panel-body">
        @using (Html.BeginForm(nameof(AccountController.Login), "Account", FormMethod.Post))
        {
            <div asp-validation-summary="All" class="alert alert-danger"></div>
            <div class="form-group">
                <label class="control-label" asp-for="Email">@Localizer["Data_Email"]</label>
                <input type="text" asp-for="Email" placeholder="@Localizer["Data_Email"]" class="form-control">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label" asp-for="Password">@Localizer["Data_Password"]</label>
                <input type="password" asp-for="Password" placeholder="@Localizer["Data_Password"]" class="form-control">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <input type="checkbox" asp-for="RememberMe">
                    <label asp-for="RememberMe">@Localizer["Data_RememberMe"]</label>
                </div>
            </div>
            <div class="form-group">
                @(Html.Recaptcha<RecaptchaV2Checkbox>(RecaptchaSettings?.Value))
            </div>
            <div>
                <button type="submit" class="btn btn-accent">@Localizer["SubmitButton"]</button>
                <a class="btn btn-unimportant" asp-action="Register">@Localizer["RegisterButton"]</a>
            </div>
        }
    </div>
</div>