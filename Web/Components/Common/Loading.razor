@code
{
    [Parameter]
    public bool IsLoaded { get; set; }
    
    [Parameter]
    public RenderFragment ChildContent { get; set; }
}

<div class="@Class">
    <div class="loader">
        <div class="loader-bar"></div>
    </div>
    @ChildContent
</div>

@code
{
    private string Class => IsLoaded ? string.Empty : "ld-loading";
}
