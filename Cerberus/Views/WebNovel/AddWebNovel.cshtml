@model AddWebNovelViewModel

@{
    ViewBag.Title = Localizer["PageTitle"];
    var settings = new LayoutSettings();
    settings.ActivateLibrary(Constants.Libraries.Select2);
    settings.ActivateLibrary(Constants.Libraries.Summernote);
    ViewBag.Settings = settings;
}

<div class="row">
    <div class="col-lg-12">
        <div class="view-header">
            <div class="header-icon">
                <i class="fal fa-book fa-sm"></i>
            </div>
            <div class="header-title">
                <h3>@Localizer["Header_Title"]</h3>
                <small>@Localizer["Header_Description"]</small>
            </div>
        </div>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-body">
                <form method="post">
                    @Html.ValidationSummary(true, null, new {@class="alert alert-danger"})
                    <div class="form-group">
                        <label>@Localizer["Data_UrlName"]</label>
                        <input asp-for="UrlName" class="form-control" placeholder="@Localizer["Data_UrlName"]">
                        <span class="help-block small">
                            <div>@Localizer["Data_UrlName_Description"]</div>
                            <span asp-validation-for="UrlName" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="form-group">
                        <label>@Localizer["Data_OriginalName"]</label>
                        <input asp-for="OriginalName" class="form-control" placeholder="@Localizer["Data_OriginalName"]">
                        <span class="help-block small">
                            <div>@Localizer["Data_OriginalName_Description"]</div>
                            <span asp-validation-for="OriginalName" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="form-group">
                        <label>@Localizer["Data_Language"]</label>
                        <select class="select2 form-control" asp-for="LanguageId" asp-items="@(new SelectList(Model.Languages, "Id", "LocalName"))"></select>
                        <span class="help-block small">
                            <div>@Localizer["Data_Language_Description"]</div>
                            <span asp-validation-for="LanguageId" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="form-group">
                        <label>@Localizer["Data_Name"]</label>
                        <input asp-for="Name" class="form-control" placeholder="@Localizer["Data_Name"]">
                        <span class="help-block small">
                            <div>@Localizer["Data_Name_Description"]</div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="form-group">
                        <label>@Localizer["Data_Description"]</label>
                        <textarea type="text" asp-for="Description" class="form-control summernote"></textarea>
                        <span class="help-block small">
                            <div>@Localizer["Data_Description_Description"]</div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="form-group">
                        <label>@Localizer["Data_Author"]</label>
                        <input asp-for="Author" class="form-control" placeholder="@Localizer["Data_Author"]">
                        <span class="help-block small">
                            <div>@Localizer["Data_Author_Description"]</div>
                            <span asp-validation-for="Author" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <input type="checkbox" asp-for="IsAdultContent">
                            <label asp-for="IsAdultContent">@Localizer["Data_IsAdultContent"]</label>
                        </div>
                        <span class="help-block small">
                            <div>@Localizer["Data_IsAdultContent_Description"]</div>
                            <span asp-validation-for="IsAdultContent" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            <input type="checkbox" asp-for="UsesVolumes">
                            <label asp-for="UsesVolumes">@Localizer["Data_UsesVolumes"]</label>
                        </div>
                        <span class="help-block small">
                            <div>@Localizer["Data_UsesVolumes_Description"]</div>
                            <span asp-validation-for="UsesVolumes" class="text-danger"></span>
                        </span>
                    </div>
                    <button type="submit" class="btn btn-accent">@Localizer["SubmitButton"]</button>
                    <a class="btn btn-default" asp-action="Index">@Localizer["CancelButton"]</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
        $(document).ready(function() {
            $(".select2").select2();
        });
    </script>
}