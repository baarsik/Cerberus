@using Cerberus.Models.Helpers
@model DataContext.Models.WebNovelChapter

@{
    var title = $"Chapter {Model.Number}";
    if (!string.IsNullOrEmpty(Model.Title))
    {
        title += $" - {Model.Title}";
    }

    ViewBag.Title = $"{Model.WebNovel.Name} - {title}";
}

<div class="row">
    <div class="col-lg-12">
        <div class="view-header">
            <div class="header-icon">
                <i class="fal fa-book fa-sm"></i>
            </div>
            <div class="pull-right text-right">
                @if (User.HasWebNovelEditorAccess())
                {
                    <a class="btn btn-lg btn-default">
                        <i class="far fa-pen"></i>
                    </a>
                }
            </div>
            <div class="header-title">
                <h3>@title</h3>
                <small>
                    @StringHelpers.GetCommaSpaceSeparatedString(Model.WebNovel.Name, Model.WebNovel.Author)
                </small>
            </div>
        </div>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-body">
                <div class="m-b">
                    <partial name="_ChapterMiniPaginator" model="@Model"/>
                </div>
                @Html.Raw(Model.Text)
            </div>
            <div class="panel-footer">
                <partial name="_ChapterMiniPaginator" model="@Model"/>
            </div>
        </div>
    </div>
</div>

<script>
    var readPageScriptLoadTime = $.now();
    $(document).keydown(function(e) {
        if ($.now() - readPageScriptLoadTime < 500) // 0.5s multiple redirect prevention
            return;
        
        if (e.which == 37) {
            $(location).attr('href', $('a#readPrev').attr('href'));
        } else if (e.which == 39) {
            $(location).attr('href', $('a#readNext').attr('href'));
        }
    });
</script>