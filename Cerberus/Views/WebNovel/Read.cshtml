@using Cerberus.Models.Helpers
@model DataContext.Models.WebNovelChapter

@{
    var webNovel = Model.WebNovel;
    var title = $"Chapter {Model.Number}";
    if (!string.IsNullOrEmpty(Model.Title))
    {
        title += $" - {Model.Title}";
    }

    ViewBag.Title = $"{webNovel.Name} - {title}";
}

<div class="row">
    <div class="col-lg-12">
        <div class="view-header">
            <div class="header-icon">
                <i class="fal fa-book fa-sm"></i>
            </div>
            <div class="pull-right text-right">
                @if (User.HasWebNovelEditorAccess())
                {
                    <a class="btn btn-lg btn-default">
                        <i class="far fa-pen"></i>
                    </a>
                }
            </div>
            <div class="header-title">
                <h3>@title</h3>
                <small>
                    @StringHelpers.GetCommaSpaceSeparatedString(webNovel.Name, webNovel.Author)
                </small>
            </div>
        </div>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-body">
                @Html.Raw(Model.Text)
            </div>
            <div class="panel-footer">
                <div class="btn-group m-t flex-row justify-center">
                    @if (Model.PreviousChapter != null)
                    {
                        <a class="btn btn-default" asp-action="Read"
                           asp-route-chapterNumber="@Model.PreviousChapter.Number"
                           asp-route-webNovelUrl="@webNovel.UrlName"><i class="fas fa-chevron-left"></i> Previous chapter</a>
                    }
                    else
                    {
                        <a class="btn btn-default disabled"><i class="fas fa-chevron-left"></i> Previous chapter</a>
                    }
                    <a class="btn btn-default" asp-action="Details"
                       asp-route-webNovelUrl="@webNovel.UrlName">Back to web novel</a>
                    @if (Model.NextChapter != null)
                    {
                        <a class="btn btn-default" asp-action="Read"
                           asp-route-chapterNumber="@Model.NextChapter.Number"
                           asp-route-webNovelUrl="@webNovel.UrlName">Next chapter <i class="fas fa-chevron-right"></i></a>
                    }
                    else
                    {
                        <a class="btn btn-default disabled">Next chapter <i class="fas fa-chevron-right"></i></a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>