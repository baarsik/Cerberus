@model EditWebNovelViewModel

@{
    ViewBag.Title = "Edit Web Novel Translation";
    var settings = new LayoutSettings();
    settings.ActivateLibrary(Constants.Libraries.Summernote);
    ViewBag.Settings = settings;
}

<div class="row">
    <div class="col-lg-12">
        <div class="view-header">
            <div class="header-icon">
                <i class="fal fa-book fa-sm"></i>
            </div>
            <div class="header-title">
                <h3>Add Web Novel Translation</h3>
                <small>
                    Please specify details
                </small>
            </div>
        </div>
        <hr>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel">
            <div class="panel-body">
                <form method="post" asp-action="EditWebNovelTranslation">
                    @Html.ValidationSummary(true, null, new { @class = "alert alert-danger" })
                    <input type="hidden" asp-for="TranslationId" readonly="readonly">
                    <input type="hidden" asp-for="UrlName" readonly="readonly">
                    @if (!string.IsNullOrEmpty(Model.OriginalName))
                    {
                        <div class="form-group">
                            <label>Original Name</label>
                            <input asp-for="OriginalName" class="form-control" placeholder="Original Name" readonly="readonly">
                            <span class="help-block small">
                                <div>Web novel original name</div>
                                <span asp-validation-for="OriginalName" class="text-danger"></span>
                            </span>
                        </div>
                    }
                    <div class="form-group">
                        <label>Language</label>
                        <input class="form-control" asp-for="LanguageName" readonly="readonly" />
                        <span class="help-block small">
                            <div>Text language</div>
                            <span asp-validation-for="LanguageName" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="form-group">
                        <label>Name</label>
                        <input asp-for="Name" class="form-control" placeholder="Name">
                        <span class="help-block small">
                            <div>Web novel name</div>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="form-group">
                        <label>Description</label>
                        <textarea type="text" asp-for="Description" class="form-control summernote"></textarea>
                        <span class="help-block small">
                            <div>Web novel description. Please, note that it will be shortened on the main page.</div>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </span>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Author))
                    {
                        <div class="form-group">
                            <label>Author</label>
                            <input asp-for="Author" class="form-control" placeholder="Author" readonly="readonly">
                            <span class="help-block small">
                                <div>Web novel original author</div>
                                <span asp-validation-for="Author" class="text-danger"></span>
                            </span>
                        </div>
                    }
                    <div class="form-group">
                        <div class="checkbox">
                            <input type="checkbox" asp-for="IsAdultContent">
                            <label asp-for="IsAdultContent">Is 18+</label>
                        </div>
                        <span class="help-block small">
                            <div>Please, check this if web novel contains lots of erotic and/or pornographic material</div>
                            <span asp-validation-for="IsAdultContent" class="text-danger"></span>
                        </span>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            @if (Model.UsesVolumes)
                            {
                                <input type="checkbox" asp-for="UsesVolumes" disabled="disabled">
                            }
                            else
                            {
                                <input type="checkbox" asp-for="UsesVolumes">
                            }
                            <label asp-for="UsesVolumes">Uses Volumes</label>
                        </div>
                        <span class="help-block small">
                            <div>If not checked, volume segregation will be unavailable</div>
                            <span asp-validation-for="UsesVolumes" class="text-danger"></span>
                        </span>
                    </div>
                    <button type="submit" class="btn btn-accent">
                        Update Translation
                    </button>
                    <a class="btn btn-default" asp-action="Details" asp-route-webNovelUrl="@Model.UrlName">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>